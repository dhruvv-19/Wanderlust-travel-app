<% layout("/layouts/boilerplate") %>

  <body>
    <!-- Filters -->
    <div class="filter-container d-flex align-items-center my-3">
      <button class="scroll-btn left" onclick="scrollFilters('left')">
        <i class="fa-solid fa-chevron-left"></i>
      </button>

      <div class="filters flex-grow-1" id="filters">
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-water-ladder"></i></div>
          <p>Pools</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-cow"></i></div>
          <p>Farm</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-mug-hot"></i></div>
          <p>Breakfast</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castle</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beaches</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-house"></i></div>
          <p>Tiny homes</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-sailboat"></i></div>
          <p>Boating</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-person-skiing"></i></div>
          <p>Skiing</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-city"></i></div>
          <p>Top cities</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-house-flood-water"></i></div>
          <p>Floating homes</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-igloo"></i></div>
          <p>Igloos</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-people-roof"></i></div>
          <p>Hostels</p>
        </div>
        <div class="filter">
          <div class="text-center"><i class="fa-solid fa-bed"></i></div>
          <p>Bedrooms</p>
        </div>
      </div>

      <button class="scroll-btn right" onclick="scrollFilters('right')">
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>

    <!-- Listings -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% for(let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card listing-card h-100">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= listing.title %>
                  </b><br>
                  &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>

    <script src="/js/filter.js"></script>
  </body>